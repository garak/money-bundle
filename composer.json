{
    "name": "garak/money-bundle",
    "type": "symfony-bundle",
    "description": "Bundle to use a single mapped currency with moneyphp/money",
    "keywords": ["Symfony", "money"],
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Massimiliano Arione",
            "email": "garakkio@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^3.2 || ^4.0",
        "moneyphp/money": "^3.0 || ^4.0",
        "symfony/config": "^6.0 || ^7.0 || ^8.0",
        "symfony/dependency-injection": "^6.4 || ^7.0 || ^8.0",
        "symfony/form": "^6.4 || ^7.0 || ^8.0",
        "symfony/http-kernel": "^6.4 || ^7.0 || ^8.0",
        "twig/twig": "^3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpunit/phpunit": "^10.5"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Garak\\Money\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Garak\\Money\\Tests\\": "tests"
        }
    }
}
